//Задача про разделение группы наполовину пока не дойдут до групп по 3

using System;
using System.Collections;

public class Test
{
	public static void Main()
	{
	   //Заметил, что прямые степени двойки всегда имеют ответ 0, а далее все последующие X/2 чисел возрастают по порядку на 1 и обратно уменьшаются до 0, т.е. до того момента, пока не дойдут до следующей степени 2
	   //Тогда можно найти ближайшую степень 2 и просто вычислить через неё
	   
	   int input = Convert.ToInt32(Console.ReadLine());
	   int nearest = 1;
	   
	   while (nearest < input){
	       nearest*=2;
	   }
	   
	   nearest/=2;
	   
	   int ost = input - nearest;
	   
	   Console.WriteLine(Math.Min(ost, nearest - ost));
	}
}
