using System;
using System.Collections;

public class Test
{
    public static int returnGroups(int n){
        if(n==3) return 1;
        if (n<3) return 0;
        
        return returnGroups(n/2) + returnGroups(n/2 + n%2);
    }
	public static void Main()
	{
	   Console.WriteLine(returnGroups(Convert.ToInt32(Console.ReadLine())));
	}
}
